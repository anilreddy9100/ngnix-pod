---
- name: intalling jenkins in ubuntu
  hosts: all
  become: yes
  tasks:
   - name: install openjdk
     ansible.builtin.apt:
       name: openjdk-11-jdk
       update_cache: yes
       state: present
   - name: exectuing url    
     ansible.builtin.get_url:
       url: https://updates.jenkins.io/download/war/2.385/jenkins.war
       dest: /home/ubuntu
       mode: '0777'
   - name: coping content
     ansible.builtin.copy:
       src: jenkins.service
       dest: /lib/systemd/system/jenkins.service
   - name: systened start
     ansible.builtin.service:
       name: jenkins.service
       enabled: yes
       state: started
        